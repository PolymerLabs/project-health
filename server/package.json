{
  "name": "project-health",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run clean && npm run generate-gql-types && tsc && npm run lint",
    "build:watch": "npm run generate-gql-types && tsc --watch",
    "clean": "rm -rf lib",
    "check-coverage": "nyc check-coverage --lines 70 --functions 70",
    "deploy": "rm -rf node_modules && npm install --production && npm run deploy:gcloud && npm install",
    "deploy:gcloud": "gcloud app deploy app.yaml --project project-health-test",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "format": "find src -name '*.ts' | xargs clang-format --style=file -i",
    "generate-gql-types": "apollo-codegen generate src/*.ts src/**/*.ts --schema github-schema.json --target typescript --addTypename --output src/gql-types.ts",
    "lint": "tslint -c ../tslint.json  src/**/*.ts -t stylish",
    "test": "npm run build && RECORD=false npm run test:ava -- --timeout=10sec && npm run check-coverage",
    "test:record": "npm run build && RECORD=true npm run test:ava -- --timeout=1min",
    "test:ava": "nyc --reporter=text --reporter=html ava lib/test/**/*-test.js --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PolymerLabs/project-health.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/PolymerLabs/project-health/issues"
  },
  "homepage": "https://github.com/PolymerLabs/project-health#readme",
  "devDependencies": {
    "@types/fs-extra": "^4.0.5",
    "@types/ora": "^1.3.1",
    "apollo-codegen": "^0.17.2",
    "ava": "^0.23.0",
    "clang-format": "^1.1.1",
    "coveralls": "^3.0.0",
    "nyc": "^11.4.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "watchy": "^0.7.0"
  },
  "dependencies": {
    "@types/command-line-args": "^4.0.2",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.0.39",
    "@types/graphql": "^0.11.7",
    "@types/node": "^8.0.53",
    "@types/node-fetch": "^1.6.7",
    "@types/request": "^2.0.8",
    "@types/request-promise-native": "^1.0.10",
    "apollo-cache-inmemory": "^1.1.2",
    "apollo-client": "^2.1.0",
    "apollo-link-context": "^1.0.2",
    "apollo-link-http": "^1.3.0",
    "body-parser": "^1.18.2",
    "command-line-args": "^4.0.7",
    "command-line-usage": "^4.0.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "fs-extra": "^4.0.2",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.5.0",
    "node-fetch": "^1.7.3",
    "ora": "^1.3.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5"
  },
  "nyc": {
    "exclude": [
      "lib/test/*"
    ]
  }
}
