{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
  ],
  "exclude": [
    "client/*",
    "client/**/*",
    "sw/*",
    "sw/**/*"
  ]
}
