{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "rootDir": "../../src",
    "outDir": "../../build"
  },
  "include": [
    "../../src/client/**/*"
  ]
}
