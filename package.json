{
  "name": "project-health",
  "version": "1.0.0",
  "description": "A tool to help Polymer team manage repos.",
  "private": true,
  "scripts": {
    "generate-gql-types": "apollo-codegen generate 'src/**/*.ts' --schema 'src/types/github-schema.json' --target typescript --addTypename --output 'src/types/gql-types.ts'",
    "clean": "rm -rf ./build/",
    "build:client": "tsc -p src/client/tsconfig.json --outDir build",
    "build:server": "tsc -p src/tsconfig.json --outDir build",
    "build:sw": "tsc -p src/sw/tsconfig.json --outDir build/sw",
    "build": "npm run clean && npm run generate-gql-types && npm run build:client && npm run build:sw && npm run build:server && node copy-static-assets.js && cp package.json package-lock.json app.yaml build/ && cp secrets.json build/ | true && cp github-health-*.json build/ | true && npm run lint",
    "build:watch": "npm run build && (npm run build:server -- --watch & npm run build:client -- --watch & npm run build:sw -- --watch)",
    "deploy:staging": "npm run build && cd build && gcloud app deploy app.yaml --quiet --project github-health-staging",
    "deploy:prod": "npm run build && cd build && gcloud app deploy app.yaml --quiet --project github-health",
    "lint": "tslint 'src/**/*.ts' -t stylish",
    "check-coverage": "nyc check-coverage --lines 70 --functions 70",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "test": "npm run build && RECORD=false npm run test:ava -- --timeout=10sec && npm run check-coverage",
    "test:record": "npm run build && RECORD=true npm run test:ava -- --timeout=1min",
    "test:ava": "nyc --reporter=text --reporter=html ava 'build/**/*-test.js' --verbose",
    "format": "find src -name '*.ts' ! -name 'gql-types.ts' | xargs clang-format --style=file -i",
    "precommit": "npm run format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PolymerLabs/project-health.git"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/command-line-args": "^4.0.2",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.11.0",
    "@types/fs-extra": "^5.0.0",
    "@types/graphql": "^0.12.1",
    "@types/node": "^9.3.0",
    "@types/node-fetch": "^1.6.7",
    "@types/ora": "^1.3.1",
    "@types/request": "^2.0.12",
    "@types/request-promise-native": "^1.0.10",
    "@types/sinon": "^4.1.3",
    "apollo-codegen": "^0.18.3",
    "ava": "^0.25.0",
    "clang-format": "^1.1.1",
    "coveralls": "^3.0.0",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "nyc": "^11.4.1",
    "sinon": "^4.2.2",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "dependencies": {
    "@google-cloud/firestore": "^0.11.2",
    "apollo-cache-inmemory": "^1.1.5",
    "apollo-client": "^2.2.0",
    "apollo-link-context": "^1.0.3",
    "apollo-link-http": "^1.3.2",
    "body-parser": "^1.18.2",
    "command-line-args": "^5.0.1",
    "command-line-usage": "^4.1.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "fs-extra": "^5.0.0",
    "graphql": "^0.12.3",
    "graphql-tag": "^2.6.1",
    "lit-html": "^0.9.0",
    "node-fetch": "^1.7.3",
    "ora": "^1.3.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "web-push": "^3.2.5"
  },
  "nyc": {
    "exclude": [
      "build/*/test/**/*"
    ]
  }
}
