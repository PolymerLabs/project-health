{
  "name": "project-health",
  "version": "1.0.0",
  "description": "A tool to help Polymer team manage repos.",
  "private": true,
  "scripts": {
    "build": "gulp build",
    "check-coverage": "nyc check-coverage --lines 70 --functions 70",
    "deploy:staging": "gulp build && gcloud app deploy app.yaml --quiet --project github-health-staging",
    "deploy:prod": "gulp build && np --no-publish && gcloud app deploy app.yaml --quiet --project github-health",
    "dev": "gulp dev",
    "format": "find src -name '*.ts' ! -name 'gql-types.ts' | xargs clang-format --style=file -i",
    "generate-gql-types": "apollo-codegen generate 'src/**/*.ts' --schema 'src/types/github-schema.json' --target typescript --addTypename --output 'src/types/gql-types.ts'",
    "lint": "tslint 'src/**/*.ts' -t stylish",
    "precommit": "npm run format",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "start": "node ./build/server.js",
    "test": "gulp build && RECORD=false npm run test:ava -- --timeout=10sec && npm run check-coverage && npm run lint",
    "test:record": "gulp build && RECORD=true npm run test:ava -- --timeout=1min",
    "test:rebaseline": "gulp build && REBASELINE=true npm run test:ava -- --timeout=1min",
    "test:ava": "nyc --reporter=text --reporter=html ava 'build/**/*-test.js' --verbose",
    "typescript:node": "tsc -p ./tsconfigs/node.json --inlineSources",
    "typescript:browser": "tsc -p ./tsconfigs/browser.json --inlineSources",
    "typescript:sw": "tsc -p ./tsconfigs/sw.json --inlineSources"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PolymerLabs/project-health.git"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/command-line-args": "^4.0.2",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.11.0",
    "@types/fs-extra": "^5.0.0",
    "@types/graphql": "^0.12.1",
    "@types/js-yaml": "^3.10.1",
    "@types/node": "^9.3.0",
    "@types/node-fetch": "^1.6.7",
    "@types/ora": "^1.3.1",
    "@types/pixelmatch": "^4.0.0",
    "@types/pngjs": "^3.3.0",
    "@types/request": "^2.0.12",
    "@types/request-promise-native": "^1.0.10",
    "@types/sinon": "^4.1.3",
    "apollo-codegen": "^0.18.3",
    "ava": "^1.0.0-beta.3",
    "clang-format": "^1.1.1",
    "coveralls": "^3.0.0",
    "cssnano": "^3.10.0",
    "glob": "^7.1.2",
    "gulp": "^4.0.0",
    "gulp-htmlmin": "^4.0.0",
    "gulp-imagemin": "^4.1.0",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-typescript": "^3.2.4",
    "husky": "^0.14.3",
    "jimp": "^0.2.28",
    "js-yaml": "^3.10.0",
    "merge-img": "^2.1.2",
    "nodemon": "^1.14.12",
    "np": "^2.20.1",
    "nyc": "^11.4.1",
    "pixelmatch": "^4.0.2",
    "pngjs": "^3.3.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.0.0",
    "puppeteer": "^1.1.0",
    "rollup": "^0.55.5",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^3.0.0",
    "rollup-stream": "^1.24.1",
    "sinon": "^4.2.2",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "uglify-es": "^3.3.10",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^0.11.2",
    "@material/switch": "^0.30.0",
    "@types/puppeteer": "^1.0.0",
    "apollo-cache-inmemory": "^1.1.5",
    "apollo-client": "^2.2.0",
    "apollo-link-context": "^1.0.3",
    "apollo-link-http": "^1.3.2",
    "body-parser": "^1.18.2",
    "command-line-args": "^5.0.1",
    "command-line-usage": "^4.1.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "fs-extra": "^5.0.0",
    "graphql": "^0.12.3",
    "graphql-tag": "^2.6.1",
    "lit-html": "^0.9.0",
    "node-fetch": "^1.7.3",
    "ora": "^1.3.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "web-push": "^3.2.5"
  },
  "nyc": {
    "exclude": [
      "build/*/test/**/*"
    ]
  }
}
